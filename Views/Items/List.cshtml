@using Shop_Drachev.Data.Models
@model IEnumerable<Items>
@{
    Layout = "_Layout";
}
<h2>Все предметы</h2>
@{
    foreach(var item in Model)
    {
        <div class="item">
            <img src="@item.Img"/>
            <div class="data">
                <h3>Модель:@item.Name</h3>
                <p>Цена: @item.Price.ToString("c")</p>
                <p>Категория: @item.Category.Name</p>
                <p>Описание: @item.Description</p>
            </div> 
        </div>
    }
}